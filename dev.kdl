layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="Database" {
        pane {
            command "docker"
            name "MongoDB"
            args "compose" "up"
            cwd "./backend"
        }
    }
    tab name="Backend" {
        pane {
            command "npm"
            name "Run dev"
            args "run" "dev"
            cwd "./backend"
        }
    }
    tab name="Frontend" {
        pane {
            command "npm"
            name "Run dev"
            args "run" "dev"
            cwd "./frontend"
        }
    }
}
session_name "Shopping List App"
attach_to_session true
